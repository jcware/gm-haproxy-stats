{
  "name": "gm-haproxy-stats",
  "version": "1.0.0",
  "description": "Verify HAPROXY stats awesomely.",
  "main": "index.js",
  "scripts": {
    "clear": "rimraf lib",
    "build": "yarn clear && ./node_modules/.bin/babel --out-dir lib src",
    "build:watch": "yarn build --watch",
    "lint": "standard --parser babel-eslint --verbose | snazzy",
    "lint:watch": "gulp",
    "lint:fix": "yarn lint --fix",
    "prepush": "yarn test",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcware/gm-haproxy-stats.git"
  },
  "keywords": [
    "js",
    "haproxy",
    "library"
  ],
  "author": "Julio Cousteau <juliocousteau@gmail.com> (https://jcware.com.br/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jcware/gm-haproxy-stats/issues"
  },
  "homepage": "https://github.com/jcware/gm-haproxy-stats#readme",
  "standard": {
    "globals": [
      "fetch",
      "it",
      "expect",
      "describe",
      "jest"
    ],
    "ignore": [
      "/lib/**/*.js",
      "/tests/**/*.js"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.0.2",
    "babel-preset-env": "^1.3.2",
    "babel-register": "^6.24.0",
    "chai": "^3.5.0",
    "gulp": "^3.9.1",
    "husky": "^0.11.9",
    "jest": "^21.2.1",
    "node-fetch": "^1.7.3",
    "rimraf": "^2.6.1",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  }
}
